@model Produtos


<section>
    <div class="card">
        <div class="card-header">
            <h1>Editar Produtos</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdProdutos" />
                        <input type="hidden" asp-for="URLImagem" />
                        <div class="form-group">
                            <input type="file" name="Imagem" class="form-control" id="customFile" accept="image/png, image/gif, image/jpeg, image/bmp, Image/jpg" />
                            <label class="form-label" for="customFile"><strong>Escolha uma imagem valida</strong></label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Categoria" class="control-label"></label>
                            <select asp-for="Categoria" class="form-control" asp-items="@Html.GetEnumSelectList<Categoria>()"></select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Preco" class="control-label"></label>
                            <input asp-for="Preco" class="form-control" id="preco" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:30px;">
                            <input type="submit" value="Editar" class="btn btn-primary" />
                            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}