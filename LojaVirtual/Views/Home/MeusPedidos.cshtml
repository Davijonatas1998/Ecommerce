@model IEnumerable<Carrinho>


@foreach (var item in Model.OrderBy(c => c.DataCompra == c.DataCompra))
{
    <div class="card mb-3" style="margin-top:50px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/imagem/@item.Produtos.URLImagem" class="img-fluid rounded-start" alt="..." width="50px" height="50px">
            </div>
            <div class="card-body">
                <p class="card-title"><span class="h5 fw-bold">@item.Produtos.Nome</span> - <span class="small">Data de Compra: @item.DataCompra.Date.ToString().Replace("00:00:00", "")</span></p>
                <p class="card-text">cod: @item.Metadata</p>
                <div class="text-end">
                    @if(item.Comprado)
                    {
                        <p>Status: <span class="text-success">Pago</span></p>
                    }
                    else
                    {
                        <p>Status: <span class="text-secondary">Pendente</span></p>
                    }
                </div>
            </div>
        </div>
    </div>
}